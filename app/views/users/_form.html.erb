<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-horizontal">

    <div class="form-group">
      <div class="col-sm-4 col-md-offset-4">
        <%= f.label :first_name, class:"sr-only" %>
        <%= f.text_field :first_name, autofocus: true, class:"form-control", placeholder:"First Name", autocomplete:"off" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-4 col-md-offset-4">
        <%= f.label :last_name, class:"sr-only" %>
        <%= f.text_field :last_name, autofocus: true, class:"form-control", placeholder:"Last Name", autocomplete:"off" %>
      </div>
    </div>
      
    <div class="form-group">
      <div class="col-sm-4 col-md-offset-4">
        <%= f.label :email, class:"sr-only" %>
        <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Email address", autocomplete:"off" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-4 col-md-offset-4">
        <%= f.label :password, class:"sr-only" %>
        <%= f.password_field :password, class:"form-control col-sm-2", placeholder:"Password", autocomplete: "off" %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4 col-md-offset-4">
          <%= f.submit "Create", class:"btn btn-default" %>
      </div>
    </div>
    
  </div>

<% end %>
