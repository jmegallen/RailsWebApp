<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="container col-sm-12 col-md-6 form-group">
    <div class="field">
      <%= f.label :name, class:"col-2 col-form-label"  %>
      <%= f.text_field :name, class:"form-control", type:"text", placeholder:"Bike Model", id:"example-text-input" %>
    </div>
    <div class="field">
      <%= f.label :colour, class:"col-2 col-form-label"  %>
      <%= f.text_field :colour, class:"form-control", type:"text", placeholder:"Colour", id:"example-text-input" %>
    </div>
    <div class="field">
      <%= f.label :price, class:"col-2 col-form-label" %>
      <div class="input-group"> 
        <span class="input-group-addon">â‚¬</span>
        <%= f.text_field :price, class:"form-control currency", type:"number", placeholder:"10.99", id:"example-number-input"%>
      </div>
    </div> 
  </div>  

  <div class="container col-sm-12 col-md-6 form-group">  
    <div class="field">
      <%= f.label :description, class:"col-2 col-form-label"  %>
      <%= f.text_area :description, class:"form-control", type:"text", placeholder:"Description", id:"example-text-input" %>
    </div>
    <div class="field">
      <%= f.label :image_url %>
      <%= f.text_field :image_url, class:"form-control", type:"url", placeholder:"Pic Link", id:"example-text-input" %>
    </div>
  </div> 

  <div class="actions">
    <%= f.submit class:"btn btn-default" %>
  </div>

<% end %>
