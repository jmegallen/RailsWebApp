<div class="container-fluid minpage">

  <p id="notice"><%= notice %></p>
  <h1>Products</h1>
  <div class="row">
    
    <%@products.each do |product| %>

    <div class="col-md-4">
      <h3><%= product.name %></h3>
      <%= image_tag(product.image_url, class: "img-prod img-responsive center-block") %>
      <h4><%= product.price %></h4>
      <h4><%= product.color %></h4>
      <p><%= product.description %></p>
      <div aria-label="..." class="btn-group-xs" role="group">
        <button class="btn btn-default" type="button"><%= link_to 'Show', product %></button> 
        <button class="btn btn-default" type="button"><%= link_to 'Edit', edit_product_path(product) %></button> 
        <button class="btn btn-default" type="button"><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></button>
      </div>
    </div>

    <%end %>

    
    <div class="col-md-4">
      <h3>Add New Bike</h3>
      <img src="https://www.bikester.se/fileadmin/mediapool/bkse/single-speed.jpg" class: "img-responsive center-block">
      <div aria-label="..." class="btn-group-sm" role="group">
        <button class="btn btn-default" type="button"><%= link_to 'New Product', new_product_path %></button>   
      </div>
    </div>

  </div>

</div>  
