<div class="row col-sm-12 col-md-8">
  <% cache @product do %>
    <%= image_tag( @product.image_url, class:"img-responsive card-img-top img-zoom", data_zoom_image: @product.image_url ) %>

    <div class="card-block col-sm-12 col-md-6">
      <h4 class="card-title"><%= @product.name %></h4>
      <p class="card-text"><%= @product.description %></p>
      <p class="card-text"><small class="text-muted"><strong>Colour:</strong><%= @product.colour %></small></p>
      <p class="card-text"><small class="text-muted"><strong>Rim Size:</strong><%= @product.rimsize %></small></p>
    </div>

  <% end %>  

  <div class="card-block col-sm-12 col-md-6">
    <div class="rated row" id="#average-rating" data-score="<%= @product.average_rating %>">Average Rating: </div>
    <p class="card-text"><small class="text-muted"><strong>Price:</strong><strong>â‚¬</strong><%= @product.price %></small></p>
    <%= form_tag "/payments/create" do %>
      <%= hidden_field_tag(:product_id, @product.id) %>
      <%= render partial: "shared/stripe_checkout_button", class:"btn btn-default"  %>
    <% end %>
  </div>

</div>  

<div class="row col-sm-12 col-md-4 form-group">
  <%= render 'new_comment' %>
  <% cache @comments do %>    
    <%= render 'comments' %>
    <div class="apple_pagination">
      <%= will_paginate @comments %>
    </div>
  <% end %>   
</div>
<%= link_to 'Back', products_path, class:"btn btn-default" %> |
<%= link_to 'Edit', edit_product_path(@product), class:"btn btn-default"%>
