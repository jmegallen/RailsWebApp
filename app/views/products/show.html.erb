<p id="notice"><%= notice %></p>
<section class="container-fluid">
	<p>
	  <strong>Image:</strong>
	  <%= image_tag(@product.image_url, class: "img-responsive center-block") %>
	</p>
	<p>
	  <strong>Name:</strong>
	  <%= @product.name %>
	</p>

	<p>
	  <strong>Colour:</strong>
	  <%= @product.color %>
	</p>

	<p>
	  <strong>Price:</strong>
	  <%= @product.price %>
	</p>

	<p>
	  <strong>Description:</strong>
	  <%= @product.description %>
	</p>


	<%= link_to 'Edit', edit_product_path(@product) %> |
	<%= link_to 'Back', products_path %>
</section>

