<div class="form-horizontal">

  <h2 class="form-signin-heading">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <div class="col-sm-4 col-md-offset-4">
      <%= f.label :first_name, hidden: true %>
      <%= f.text_field :first_name, autofocus: true, required: true, class:"form-control", placeholder:"First Name" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-4 col-md-offset-4">
      <%= f.label :last_name, hidden: true %>
      <%= f.text_field :last_name, autofocus: true, required: true, class:"form-control", placeholder: "Last Name" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-4 col-md-offset-4">
      <%= f.label :email, hidden: true %>
      <%= f.email_field :email, autofocus: true, required: true, class:"form-control", placeholder:"Email"  %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-4 col-md-offset-4">
      <%= f.label :password, hidden: true %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Password"  %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-4 col-md-offset-4">
      <%= f.label :password_confirmation, hidden: true %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Password Confirmation"  %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4 col-md-offset-4">
      <%= f.submit "Sign up", class:"btn btn-default" %>
    </div>  
  </div>
  <% end %>

  <div class="row">
    <%= render "devise/shared/links" %>
  </div>

</div>
