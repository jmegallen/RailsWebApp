<div class="form-horizontal">

  <h2 class="form-signin-heading">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <div class="col-sm-4 col-md-offset-4">
        <%= f.label :email, class:"sr-only" %>
        <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Email address", autocomplete:"off" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-4 col-md-offset-4">
        <%= f.label :password, class:"sr-only" %>
        <%= f.password_field :password, class:"form-control col-sm-2", placeholder:"Password", autocomplete: "off" %>
      </div>
    </div>

    <div class="form-group"> 
      <div class="col-sm-4 col-md-offset-4">
        <div class="checkbox">
        <% if devise_mapping.rememberable? -%>
          <%= f.label :remember_me %>
          <%= f.check_box :remember_me %>
        <% end -%>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4 col-md-offset-4">
        <%= f.submit "Log in", class:"btn btn-default" %>
      </div>  
    </div>
  <% end %>
  <div class="row">
    <%= render "devise/shared/links" %>
  </div>  
</div>