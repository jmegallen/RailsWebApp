<div class="form-horizontal">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <h2 class="form-signin-heading">Log in</h2>

    <div class="form-group">
      <div class="col-sm-6 col-md-offset-3">
        <%= f.label :email, class:"sr-only" %>
        <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Email address", autocomplete:"off" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-6 col-md-offset-3">
        <%= f.label :password, class:"sr-only" %>
        <%= f.password_field :password, class:"form-control col-sm-2", placeholder:"Password", autocomplete: "off" %>
      </div>
    </div>

    <div class="form-group"> 
      <div class="col-sm-6 col-md-offset-3">
        <div class="checkbox">
        <% if devise_mapping.rememberable? -%>
          <%= f.label :remember_me, value:"remember-me" %>
            <%= f.check_box :remember_me, type:"checkbox" %>
        <% end -%>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-6 col-md-offset-3">
        <%= f.submit "Log in", class:"btn btn-default" %>
      </div>  
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>